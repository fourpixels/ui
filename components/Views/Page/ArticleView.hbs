  <kirby-grid gutter="large">
    <kirby-column width="1/4">

      <kirby-fieldset :fields="[
        {
          name: 'date',
          label: 'Date',
          type: 'date'
        },
        {
          name: 'author',
          label: 'Author',
          type: 'text',
          icon: 'user'
        },
        {
          name: 'tags',
          label: 'Tags',
          type: 'tags'
        }
      ]" :values="{
        author: 'Neil Gaiman'
      }" />
    </kirby-column>

    <kirby-column width="1/2">

      <kirby-fieldset :fields="[
        {
          name: 'text',
          label: 'Text',
          type: 'textarea'
        }
      ]" :values="{
