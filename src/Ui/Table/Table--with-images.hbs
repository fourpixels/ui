<kirby-table>
  <kirby-table-header>
    <kirby-table-header-cell type="image"></kirby-table-header-cell>
    <kirby-table-header-cell>Filename</kirby-table-header-cell>
    <kirby-table-header-cell>Type</kirby-table-header-cell>
    <kirby-table-header-cell align="right">Size</kirby-table-header-cell>
    <kirby-table-header-cell></kirby-table-header-cell>
    <kirby-table-header-cell></kirby-table-header-cell>
  </kirby-table-header>

  <kirby-table-body>
    <kirby-table-row>
      <kirby-table-cell type="image">
        <kirby-image src="https://unsplash.it/100/100?random"></kirby-image>
      </kirby-table-cell>
      <kirby-table-cell><a href="">desk.jpg</a></kirby-table-cell>
      <kirby-table-cell type="info">image/jpeg</kirby-table-cell>
      <kirby-table-cell type="info" align="right">1.2 MB</kirby-table-cell>
      <kirby-table-cell type="button">
        <kirby-button icon="edit"></kirby-button>
      </kirby-table-cell>
      <kirby-table-cell type="button">
        <kirby-button icon="trash"></kirby-button>
      </kirby-table-cell>
    </kirby-table-row>

    <kirby-table-row>
      <kirby-table-cell type="image">
        <kirby-image src="https://unsplash.it/100/100?random"></kirby-image>
      </kirby-table-cell>
      <kirby-table-cell><a href="">landscape.jpg</a></kirby-table-cell>
      <kirby-table-cell type="info">image/jpeg</kirby-table-cell>
      <kirby-table-cell type="info" align="right">3.4 MB</kirby-table-cell>
      <kirby-table-cell type="button">
        <kirby-button icon="edit"></kirby-button>
      </kirby-table-cell>
      <kirby-table-cell type="button">
        <kirby-button icon="trash"></kirby-button>
      </kirby-table-cell>
    </kirby-table-row>

  </kirby-table-body>
</kirby-table>
